{% extends 'base.html.twig' %}

{% block title %}District index{% endblock %}

{% block body %}
    <h1>Liste des districts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for district in districts %}
            <tr>
                <td>{{ district.id }}</td>
                <td>{{ district.nom }}</td>
                <td>{{ district.code }}</td>
                <td>
                    
                    <a href="{{ path('app_district_show', {'id': district.id}) }}" class="btn btn-outline-primary">show</a>
                    <a href="{{ path('app_district_edit', {'id': district.id}) }}" class="btn btn-outline-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_district_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
